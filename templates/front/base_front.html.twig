<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}EduSync{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/front/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/slick.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/magnific-popup.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/nice-select.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/jquery.nice-number.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/default.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/responsive.css') }}">
    <style>
      .logo img {
        max-height: 80px;
        max-width: 250px;
        height: auto;
        width: auto;
      }
      .navbar-brand img {
        max-height: 60px;
        max-width: 200px;
        height: auto;
        width: auto;
      }
      /* Réduire l'espace entre le logo et la navbar */
      .header-logo-support {
        padding-top: 15px !important;
        padding-bottom: 15px !important;
      }
      .navigation {
        margin-top: -10px;
      }
    </style>
  {% endblock %}
</head>

<body>

  {# ====== HEADER TOP (comme le template) ====== #}
  <header id="header-part">
    <div class="header-top d-none d-md-block">
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
            <div class="header-contact text-lg-left text-center">
              <ul>
                <li><img src="{{ asset('assets/front/images/all-icon/map.png') }}" alt="icon"><span>127/5 Mark street, New york</span></li>
                <li><img src="{{ asset('assets/front/images/all-icon/email.png') }}" alt="icon"><span>info@yourmail.com</span></li>
              </ul>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="header-opening-time text-lg-right text-center">
              <p>Opening Hours : Monday to Saturday - 8 Am to 5 Pm</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# ====== HEADER LOGO + CTA ====== #}
    <div class="header-logo-support pt-30 pb-30">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-4 col-md-4">
            <div class="logo">
              <a href="{{ path('front_home') }}">
                <img src="{{ asset('images/all-icon/2 (2).png') }}" alt="Logo">
              </a>
            </div>
          </div>
          <div class="col-lg-8 col-md-8">
            <div class="support-button float-right d-none d-md-block">
              <div class="support float-left">
                <div class="icon">
                  <img src="{{ asset('assets/front/images/all-icon/support.png') }}" alt="icon">
                </div>
                <div class="cont">
                  <p>Need Help? call us free</p>
                  <span>321 325 5678</span>
                </div>
              </div>
              <div class="button float-left">
                <a href="#" class="main-btn">Apply Now</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# ====== MENU / NAVBAR ====== #}
    <div class="navigation">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <nav class="navbar navbar-expand-lg">
              <a class="navbar-brand d-md-none" href="{{ path('front_home') }}">
                <img src="{{ asset('images/all-icon/2 (2).png') }}" alt="Logo">
              </a>

              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>

              <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_home') }}">HOME</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_about') }}">ABOUT US</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_courses') }}">COURSES</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_events') }}">EVENTS</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_project') }}">PROJET</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_forum_index') }}">FORUM</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_complaint') }}">RECLAMATION</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('front_contact') }}">CONTACT</a></li>
                </ul>
              </div>

              <div class="right-icon text-right">
                <ul>
                  <li><a href="#" id="search"><i class="fa fa-search"></i></a></li>
                  <li><a href="#"><i class="fa fa-shopping-bag"></i><span>0</span></a></li>
                </ul>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </header>

  {# ====== ICI LE CONTENU DES PAGES ====== #}
  {% block body %}{% endblock %}

  {% block javascripts %}
    <script src="{{ asset('assets/front/js/vendor/jquery.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/front/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/slick.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/jquery.magnific-popup.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/jquery.nice-select.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/jquery.nice-number.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/waypoints.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/jquery.counterup.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/jquery.countdown.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/validator.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/ajax-contact.js') }}"></script>
    <script src="{{ asset('assets/front/js/map-script.js') }}"></script>
    <script src="{{ asset('assets/front/js/main.js') }}"></script>
  {% endblock %}
</body>
</html>

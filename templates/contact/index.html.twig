{% extends 'front/base_front.html.twig' %}

{% block title %}Contact - EduSync{% endblock %}

{% block body %}
{# ======= PAGE BANNER SECTION ======= #}
<section id="page-banner" class="pt-105 pb-110 bg_cover" data-overlay="8" style="background-image: url('{{ asset('images/page-banner-1.jpg') }}')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-banner-cont">
                    <h2>Contact</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('front_home') }}">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Contact</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

{# ======= CONTACT SECTION ======= #}
<section id="contact-page" class="pt-90 pb-120 gray-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-from mt-30">
                    <div class="section-title">
                        <h5>Contactez-nous</h5>
                        <h2>Envoyez-nous un message</h2>
                    </div>
                    <form action="#">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="singel-form">
                                    <label>Votre nom</label>
                                    <input type="text" placeholder="Votre nom">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="singel-form">
                                    <label>Votre email</label>
                                    <input type="email" placeholder="Votre email">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="singel-form">
                                    <label>Sujet</label>
                                    <input type="text" placeholder="Sujet">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="singel-form">
                                    <label>Message</label>
                                    <textarea placeholder="Votre message"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="singel-form">
                                    <button type="submit" class="main-btn">Envoyer</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-address mt-30">
                    <ul>
                        <li>
                            <div class="singel-address">
                                <div class="icon">
                                    <i class="fa fa-map-marker"></i>
                                </div>
                                <div class="cont">
                                    <p>Adresse</p>
                                    <span>127/5 Mark street, New york</span>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="singel-address">
                                <div class="icon">
                                    <i class="fa fa-envelope"></i>
                                </div>
                                <div class="cont">
                                    <p>Email</p>
                                    <span>info@yourmail.com</span>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="singel-address">
                                <div class="icon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <div class="cont">
                                    <p>Téléphone</p>
                                    <span>321 325 5678</span>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

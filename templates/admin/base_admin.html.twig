{# templates/admin/base_admin.html.twig #}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}SB Admin 2{% endblock %}</title>

    {# Fonts + icons #}
    <link href="{{ asset('assets-back/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Main CSS #}
    <link href="{{ asset('assets-back/css/sb-admin-2.min.css') }}" rel="stylesheet">

    {# Optionnel: css spécifiques page #}
    {% block stylesheets %}{% endblock %}
</head>

<body id="page-top">

<div id="wrapper">

    {# Sidebar #}
    {% include 'admin/partials/_sidebar.html.twig' %}

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">

            {# Topbar #}
            {% include 'admin/partials/_topbar.html.twig' %}

            {# Page Content #}
            <div class="container-fluid">
                {% block content %}{% endblock %}
            </div>

        </div>

        {# Footer #}
        {% include 'admin/partials/_footer.html.twig' %}
    </div>

</div>

{# Scroll to Top Button#}
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

{# Logout Modal si tu veux (optionnel) #}
{% block modals %}{% endblock %}

{# JS Core #}
<script src="{{ asset('assets-back/vendor/jquery/jquery.min.js') }}"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('assets-back/vendor/jquery-easing/jquery.easing.min.js') }}"></script>
<script src="{{ asset('assets-back/js/sb-admin-2.min.js') }}"></script>

{# Optionnel: scripts spécifiques page #}
{% block javascripts %}{% endblock %}

</body>
</html>
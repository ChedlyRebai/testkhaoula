{% extends 'admin/base_admin.html.twig' %}

{% block title %}Edit Post - Admin{% endblock %}

{% block body %}
<div class="container my-5">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mb-4">Edit Post</h2>

      <form method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" value="{{ post.title }}">
        </div>

        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea class="form-control" id="content" name="content" rows="8">{{ post.content }}</textarea>
        </div>

        <div class="mb-3">
          <label for="tags" class="form-label">Tags</label>
          <input type="text" class="form-control" id="tags" name="tags" value="{{ post.tags }}" placeholder="Separate with commas">
          <div class="invalid-feedback" style="display:block; color:#dc3545; font-size:12px; margin-top:4px;">{{ (errors.tags is defined) ? errors.tags|join(', ') : '' }}</div>
        </div>

        <div class="mb-3">
          <label>Current Information:</label>
          <p>
            <strong>Author:</strong> {{ post.author }}<br>
            <strong>Created:</strong> {{ post.createdAt|date('Y-m-d H:i') }}<br>
            <strong>Updated:</strong> {{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i') : 'Never' }}<br>
            <strong>Views:</strong> {{ post.views }}<br>
            <strong>Comments:</strong> {{ post.commentaires|length }}
          </p>
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Update Post
          </button>
          <a href="{{ path('app_admin') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(function(form) {
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
{% endblock %}

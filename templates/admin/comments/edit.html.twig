{% extends 'admin/base_admin.html.twig' %}

{% block title %}Edit Comment - Admin{% endblock %}

{% block body %}
<div class="container my-5">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mb-4">Edit Comment</h2>

      <form method="POST">
        <div class="mb-3">
          <label for="content" class="form-label">Comment Content</label>
          <textarea class="form-control" id="content" name="content" rows="6">{{ commentaire.content }}</textarea>
        </div>

        <div class="mb-3">
          <label>Information:</label>
          <p>
            <strong>Author:</strong> {{ commentaire.author }}<br>
            <strong>Post:</strong> {{ commentaire.post.title }}<br>
            <strong>Created:</strong> {{ commentaire.createdAt|date('Y-m-d H:i') }}<br>
            {% if commentaire.updatedAt %}
              <strong>Last Updated:</strong> {{ commentaire.updatedAt|date('Y-m-d H:i') }}<br>
            {% endif %}
          </p>
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Update Comment
          </button>
          <a href="{{ path('app_admin') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(function(form) {
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
{% endblock %}

{% extends "admin/base_admin.html.twig" %}

{% block title %}Tableau de Bord - Admin{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <h1 class="mb-4">Tableau de Bord</h1>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-primary text-uppercase mb-1">
                        <small><strong>Projets Totaux</strong></small>
                    </div>
                    <div class="h3 mb-0">{{ totalProjets }}</div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-success text-uppercase mb-1">
                        <small><strong>Projets Actifs</strong></small>
                    </div>
                    <div class="h3 mb-0">{{ projetsEnabled }}</div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-info text-uppercase mb-1">
                        <small><strong>Tâches Totales</strong></small>
                    </div>
                    <div class="h3 mb-0">{{ totalTaches }}</div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-warning text-uppercase mb-1">
                        <small><strong>Tâches Actives</strong></small>
                    </div>
                    <div class="h3 mb-0">{{ tachesEnabled }}</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Section -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Gestion des Projets</h6>
                    <a href="{{ path('admin_projets_list') }}" class="btn btn-sm btn-primary">
                        <i class="bi bi-list-ul"></i> Voir tous
                    </a>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_projets_list') }}" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> Lister les projets
                        </a>
                        <a href="{{ path('admin_projet_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Créer un nouveau projet
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-info">Gestion des Tâches</h6>
                    <a href="{{ path('admin_taches_list') }}" class="btn btn-sm btn-info">
                        <i class="bi bi-list-ul"></i> Voir tous
                    </a>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_taches_list') }}" class="btn btn-outline-info">
                            <i class="bi bi-eye"></i> Lister les tâches
                        </a>
                        <a href="{{ path('admin_tache_new') }}" class="btn btn-info">
                            <i class="bi bi-plus"></i> Créer une nouvelle tâche
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-secondary">Accès Rapide</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <a href="{{ path('admin_projets_list') }}" class="list-group-item">
                        Tous les projets
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('admin_taches_list') }}" class="list-group-item">
                        Toutes les tâches
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('projet_list') }}" class="list-group-item">
                        Voir le front-end
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

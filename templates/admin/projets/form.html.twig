{% extends "admin/base_admin.html.twig" %}

{% block title %}{% if isEdit %}Éditer{% else %}Créer{% endif %} - Projet - Admin{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1>{% if isEdit %}Éditer le projet{% else %}Créer un nouveau projet{% endif %}</h1>

            <div class="card mt-4">
                <div class="card-body">
                    {{ form_start(form, {'novalidate': 'novalidate'}) }}

                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom du projet') }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du projet'}}) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="alert alert-danger mt-1 mb-0">
                                {% for error in form.nom.vars.errors %}
                                    <small>{{ error.message }}</small>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Entrez la description du projet'}}) }}
                        {% if form.description.vars.errors|length > 0 %}
                            <div class="alert alert-danger mt-1 mb-0">
                                {% for error in form.description.vars.errors %}
                                    <small>{{ error.message }}</small>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{% if isEdit %}{{ path('admin_projet_show', {'id': projet.id}) }}{% else %}{{ path('admin_projets_list') }}{% endif %}" 
                           class="btn btn-secondary">
                            <i class="bi bi-x"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> {% if isEdit %}Mettre à jour{% else %}Créer{% endif %}
                        </button>
                    </div>

                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

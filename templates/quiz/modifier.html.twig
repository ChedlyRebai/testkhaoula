{% extends 'base.html.twig' %}

{% block title %}Modifier quiz{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">✏️ Modifier le quiz</h3>
        </div>
        <div class="card-body">
            {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'needs-validation' } }) }}

            <div class="mb-3">
                {{ form_label(form.titre, 'Titre du quiz', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger small fw-bold mt-1">
                    {{ form_errors(form.titre) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                <div class="text-danger small fw-bold mt-1">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.questions, 'Questions', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.questions, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                <div class="text-danger small fw-bold mt-1">
                    {{ form_errors(form.questions) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.dateEcheance, 'Date d\'échéance', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.dateEcheance, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small fw-bold mt-1">
                        {{ form_errors(form.dateEcheance) }}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.scoreMax, 'Score maximum', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.scoreMax, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small fw-bold mt-1">
                        {{ form_errors(form.scoreMax) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3"> {{ form_label(form.duree, 'Durée (minutes)', {'label_attr': {'class': 'form-label fw-bold'}}) }} {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }} <div class="text-danger small fw-bold mt-1"> {{ form_errors(form.duree) }} </div> </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.tentatives, 'Nombre de tentatives', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.tentatives, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small fw-bold mt-1">
                        {{ form_errors(form.tentatives) }}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.relation, 'Cours associé', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.relation, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger small fw-bold mt-1">
                        {{ form_errors(form.relation) }}
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary">⬅️ Retour à la liste</a>
                <button class="btn btn-success">
                    {{ button_label|default('Mettre à jour') }}
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}


